# ZakoKen - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# Wallet Configuration
# ============================================
PRIVATE_KEY=                                    # Your wallet private key (without 0x)
DEPLOYER_ADDRESS=                               # Your wallet address (0x...)

# ============================================
# RPC URLs
# ============================================
# Get free RPC endpoints from Alchemy or Infura
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
ARC_RPC_URL=https://rpc.arc-testnet.gelato.digital

# ============================================
# Block Explorers (for contract verification)
# ============================================
ETHERSCAN_API_KEY=                              # Get from https://etherscan.io/myapikey
BASESCAN_API_KEY=                               # Get from https://basescan.org/myapikey

# ============================================
# LayerZero Configuration (Testnet V2)
# ============================================
# Official LayerZero V2 endpoints - DO NOT CHANGE
LZ_ENDPOINT_SEPOLIA=0x6EDCE65403992e310A62460808c4b910D972f10f
LZ_ENDPOINT_BASE_SEPOLIA=0x6EDCE65403992e310A62460808c4b910D972f10f

# LayerZero Chain IDs (EIDs) - DO NOT CHANGE
LZ_EID_SEPOLIA=40161
LZ_EID_BASE_SEPOLIA=40245

# ============================================
# Uniswap v4 Configuration (Sepolia only)
# ============================================
# Check https://docs.uniswap.org/contracts/v4/deployments for latest addresses
UNISWAP_V4_POOL_MANAGER=                        # PoolManager contract address
UNISWAP_V4_SWAP_ROUTER=                         # SwapRouter contract address
UNISWAP_V4_POSITION_MANAGER=                    # PositionManager contract address

# ============================================
# USDC Addresses
# ============================================
# Deploy mock USDC or use existing test USDC
USDC_SEPOLIA=                                   # Test USDC on Sepolia
USDC_BASE_SEPOLIA=                              # Test USDC on Base Sepolia
USDC_ARC=                                       # Native USDC from Circle faucet (https://faucet.circle.com)

# ============================================
# Project Configuration
# ============================================
PROJECT_TREASURY=                               # Treasury wallet address (can be same as deployer)
PROJECT_ID=0x1234...                            # keccak256("zakoken-demo") or similar

# ============================================
# Deployed Contract Addresses (fill after deployment)
# ============================================
# Ethereum Sepolia
ZKK_SEPOLIA=
FIXED_EXCHANGE_SEPOLIA=
UNISWAP_HOOK_SEPOLIA=
ARBITRAGE_BOT_SEPOLIA=

# Base Sepolia
ZKK_BASE_SEPOLIA=

# Arc Public Testnet (optional)
ZKK_ARC=
FIXED_EXCHANGE_ARC=

# ============================================
# Frontend Environment Variables (Vite)
# ============================================
# WalletConnect - Get project ID from https://cloud.walletconnect.com
VITE_WALLET_CONNECT_PROJECT_ID=

# Alchemy API key for frontend RPC calls
VITE_ALCHEMY_API_KEY=

# Contract addresses (copy from above after deployment)
VITE_ZKK_ADDRESS_SEPOLIA=
VITE_ZKK_ADDRESS_BASE_SEPOLIA=
VITE_FIXED_EXCHANGE_SEPOLIA=
VITE_UNISWAP_HOOK_SEPOLIA=

# ============================================
# Optional: Gas Price Configuration
# ============================================
# Leave empty to use network default, or set custom values (in gwei)
GAS_PRICE_SEPOLIA=
GAS_PRICE_BASE_SEPOLIA=

# ============================================
# Optional: Hardhat Network Configuration
# ============================================
# Set to true to report gas usage in tests
REPORT_GAS=false

# Coinmarketcap API key for gas price conversion (optional)
COINMARKETCAP_API_KEY=
